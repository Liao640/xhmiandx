/* pages/article/article.wxss */

.back {
  width: 100%;
  height: 350rpx;
}

.ipt {
  width: 450rpx;
  height: 80rpx;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 20px;
  position: absolute;
  top: 10%;
  left: 50%;
  padding-left: 40px;
  transform: translate(-50%, 50%);
  font-size: 12px;
}

.searchcion {
  width: 20px;
  height: 20px;
  position: absolute;
  top: 25%;
  left: 5%;
  z-index: 999;
}

.file_container {
  display: flex;
  margin-top: 15rpx;
  line-height: 80rpx;
  border-bottom: 1px solid rgb(210, 210, 218);
  padding: 0 20rpx;
  font-size: 16px;
}

.file_name {
  flex: 85%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.edit_img {
  flex: 15%;
}

.downImg {
  width: 35rpx;
  height: 35rpx;
}

.downImg:first-child {
  margin-right: 25rpx;
}
