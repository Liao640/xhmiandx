<view class="gory">
  <view class="gory_img">
    <image class="img" src="../../imgs/back_s.png"></image>
  </view>
  <view class="gory_list">
    <view class="list" wx:for="{{['收藏列表', '下载列表', '最近浏览']}}" wx:for-item="item" wx:key="key">
      <text class="list_text {{currentTabIndex == index? 'selected':''}}" data-index="{{index}}" bindtap="onTabItemTap">{{item}}</text>
    </view>
  </view>
  <view class="gory_file">
    <!-- 文件列表 -->
    <view class="scroll" hidden="{{currentTabIndex!=0}}">
      <view class="file_container" wx:for="{{fileList}}" wx:for-item="item" wx:key="key">
        <!-- 阅读 -->
        <text class="file_name" bindtap="openFile">{{item.fileName}}</text>
        <view class="edit_img">
          <!-- 下载 -->
          <image class="downImg" src="../../imgs/down_s.png" bindtap="downLoadFile"></image>
          <image class="downImg" wx:if="{{item.collectionStatus}}" data- src="../../imgs/collect_s.png" bindtap="clickCollect"></image>
          <image class="downImg" wx:else src="../../imgs/collected_s.png" bindtap="clickCollect"></image>
        </view>
      </view>
    </view>
    <view hidden="{{currentTabIndex!=1}}">
      <view class="file_container">
        <text class="file_name">中海物业文件2</text>
        <view class="edit_img">
          <image class="downImg" src="../../imgs/down_s.png"></image>
          <image class="downImg" wx:if="{{collectionStatus}}" src="../../imgs/collect_s.png" bindtap="clickCollect"></image>
          <image class="downImg" wx:else src="../../imgs/collected_s.png" bindtap="clickCollect"></image>
        </view>
      </view>
    </view>
    <view hidden="{{currentTabIndex!=2}}">
      <view class="file_container">
        <text class="file_name">中海物业文件3</text>
        <view class="edit_img">
          <image class="downImg" src="../../imgs/down_s.png"></image>
          <image class="downImg" wx:if="{{collectionStatus}}" src="../../imgs/collect_s.png" bindtap="clickCollect"></image>
          <image class="downImg" wx:else src="../../imgs/collected_s.png" bindtap="clickCollect"></image>
        </view>
      </view>
    </view>
  </view>
</view>
