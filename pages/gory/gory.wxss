page{
  display: flex;
  height: 100%;
  width: 100%;
}
.gory{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column; 
  font-style: "PingFangSC"
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
}
/* 背景图片 */
.gory_img{
  width: 100%;
  height: 340rpx;
} 
.img{
  width: 100%;
  height: 100%;
}

/* 功能列表 */
.gory_list{
  height: 110rpx;
  line-height: 110rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 2px solid rgba(162,162,162,0.64);
}
.list{
  flex: 1;
  margin: 0 10px 4px;
  text-align: center;
}
.list_text{
  display: block;
  width: 100%;
  height: 100%;
  font-size: 16px;
}
.selected{
  border-bottom: 4px solid rgb(183,11,2);
}

/* 文件列表 */
.gory_file{
  flex: 1;
  overflow: auto;
  padding: 10rpx;
}
.file_container{
  display: flex;  
  margin-top:15rpx;
  line-height: 80rpx;
  border-bottom: 1px solid rgb(210,210,218);
  padding: 0 20rpx;
  font-size: 16px;
}
.file_name{
  flex: 85%;
  text-overflow : ellipsis; 
  white-space : nowrap; 
  overflow : hidden; 
}
.edit_img{
  flex: 15%;
}
.downImg{
  width: 35rpx;
  height: 35rpx;
}
.downImg:first-child{
  margin-right: 25rpx;
}