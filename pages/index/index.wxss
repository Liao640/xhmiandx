/* 登录页 */
.user{
  font-size: 15px;
}
.username{
  margin-bottom: 30rpx;
  line-height: 30rpx;
}
input{
  width: 400rpx;
  height: 60rpx;
  padding: 10rpx;
  margin-top: 20rpx;
  border: 1px solid gray;
}
.btn{
  margin-top: 50rpx;
}
button{
  font-size: 15px;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
}
/* 首页 */
.text_box{ 
  width:100%;
  text-align:center;
  height:100rpx;
  line-height:100rpx;
}
.left_box{
  width:240rpx;
  height:100%;
  color:rgb(153,153,153);
  font-size:14px;
  background-color:rgb(242,242,242);
  float: left;
  overflow: scroll;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.text_box:hover{
  color:black;
  background-color:rgb(255,255,255); 
}  
page{
  height:100%;
}
.right_box{
  float:right;
  width:490rpx;
  height:100%;
  box-sizing: border-box;
  margin: 0 10rpx;
  overflow:hidden;
}
.box{
  width:100%;
  height:100%;
}
.right_img{
  width:490rpx;
  height:200rpx;
  display:inline-block;
  overflow:hidden;
  border-radius: 20rpx;
}